<project name="JamSessionClient" default="compile" basedir="." >

	<property name="src" location="src" />
	<property name="build" location="build" />
	<!-- Creer dossier build -->
	<target name="init">
		<mkdir dir="${build}" />
	</target>
	<!-- Compiler les sources -->
	<target name="compile" depends="init">
		<javac debug="true" srcdir="${src}" excludes="" destdir="${build}"
			includeantruntime="false">
			<compilerarg line="-Xlint:deprecation" />
		</javac>
	</target>

	<target name="run" depends="compile" description="Lance le client en monde console">
		<java classname="Client" fork="true"
			classpath="${build}">
			<arg value="${arg0}" />
		</java>
	</target>

	<target name="ihm" depends="compile" description="Lance IHM">
		<java classname="client.controller.ControllerClient" fork="true"
			classpath="${build}">
		</java>
	</target>


	<!-- Nettoyage dans le dossier -->
	<target name="clean">
		<fileset dir="${basedir}" defaultexcludes="no">
			<include name="**/*~" />
		</fileset>
		<delete dir="${build}" />
	</target>





</project>
